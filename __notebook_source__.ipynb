


import os
import time
import shutil
import pathlib
import itertools
from PIL import Image


import cv2
import numpy as np
import pandas as pd
import seaborn as sns
sns.set_style('darkgrid')
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split
from sklearn.metrics import confusion_matrix, classification_report


import tensorflow as tf
from tensorflow import keras
from tensorflow.keras.models import Sequential
from tensorflow.keras.optimizers import Adam, Adamax
from tensorflow.keras.preprocessing.image import ImageDataGenerator
from tensorflow.keras.layers import Conv2D, MaxPooling2D, Flatten, Dense, Activation, Dropout, BatchNormalization , GlobalAveragePooling2D
from tensorflow.keras import regularizers
from tensorflow.keras.callbacks import EarlyStopping





# Ignore Warnings
import warnings
warnings.filterwarnings("ignore")

print ('modules loaded')





train_path = "/kaggle/input/covid19-image-dataset/Covid19-dataset/train"
test_path = "/kaggle/input/covid19-image-dataset/Covid19-dataset/test"





from tensorflow.keras.applications.vgg16 import preprocess_input

train_gen = ImageDataGenerator(
    preprocessing_function=preprocess_input,
    rotation_range=10,
    zoom_range=0.1,
    horizontal_flip=True,
    validation_split=0.2
)

test_gen = ImageDataGenerator(
    preprocessing_function=preprocess_input
)


img_size = (224, 224)
batch_size = 32

train_data = train_gen.flow_from_directory(
    train_path,
    target_size=img_size,
    batch_size=batch_size,
    class_mode="categorical",
    subset="training",
    shuffle=True
)

val_data = train_gen.flow_from_directory(
    train_path,
    target_size=img_size,
    batch_size=batch_size,
    class_mode="categorical",
    subset="validation",
    shuffle=True
)

test_data = test_gen.flow_from_directory(
    test_path,
    target_size=img_size,
    batch_size=batch_size,
    class_mode="categorical",
    shuffle=False
)





img_size = (224, 224)               # VGG is 224x224
channels = 3
img_shape = (img_size[0], img_size[1], channels)

base_model = tf.keras.applications.VGG16(
    include_top=False,
    weights="imagenet",
    input_shape=(224,224,3)
)

base_model.trainable = False   # Freeze pretrained layers

model_vgg = Sequential([
    base_model,
    GlobalAveragePooling2D(),   # ‚Üê THIS FIXES IT
    BatchNormalization(),
    Dense(512, activation='relu'),
    Dropout(0.5),
    Dense(3, activation='softmax')
])

model_vgg.compile(Adamax(learning_rate=1e-4),
                  loss='categorical_crossentropy',
                  metrics=['accuracy'])

model_vgg.summary()



early_stop = EarlyStopping(
    monitor='val_loss',
    patience=5,
    restore_best_weights=True
)






epochs = 30   # number of all epochs in training

history_vgg = model_vgg.fit(x= train_data, epochs= epochs, verbose= 1, validation_data= val_data, 
                    validation_steps= None, shuffle= True ,  callbacks=[early_stop])


train_loss, train_acc = model_vgg.evaluate(train_data, verbose=1)

print(f"\nTest Loss: {train_loss:.4f}")
print(f"Test Accuracy: {train_acc:.4f}")


test_loss, test_acc = model_vgg.evaluate(test_data, verbose=1)

print(f"\nTest Loss: {test_loss:.4f}")
print(f"Test Accuracy: {test_acc:.4f}")





plt.figure(figsize=(14,5))

# Accuracy Plot
plt.subplot(1,2,1)
plt.plot(history_vgg.history['accuracy'], label='Train Accuracy')
plt.plot(history_vgg.history['val_accuracy'], label='Validation Accuracy')
plt.title('Model Accuracy')
plt.xlabel('Epochs')
plt.ylabel('Accuracy')
plt.legend()

# Loss Plot
plt.subplot(1,2,2)
plt.plot(history_vgg.history['loss'], label='Train Loss')
plt.plot(history_vgg.history['val_loss'], label='Validation Loss')
plt.title('Model Loss')
plt.xlabel('Epochs')
plt.ylabel('Loss')
plt.legend()
plt.savefig("training_curves.png", dpi=300, bbox_inches="tight")

plt.show()



predictions = model_vgg.predict(test_data)
y_pred = np.argmax(predictions, axis=1)
y_true = test_data.classes

cm = confusion_matrix(y_true, y_pred)
class_names = list(test_data.class_indices.keys())

plt.figure(figsize=(6,6))
sns.heatmap(cm, annot=True, fmt="d",
            xticklabels=class_names,
            yticklabels=class_names,
            cmap="Blues")

plt.title("Confusion Matrix")
plt.xlabel("Predicted")
plt.ylabel("Actual")

plt.savefig("confusion_matrix.png", dpi=300, bbox_inches="tight")
plt.show()


print("\nClassification Report:\n")
print(classification_report(y_true, y_pred, target_names=class_names))





model_vgg.save('model_VGG.h5')



